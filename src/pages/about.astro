---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'About Mobile-Tech, LLC',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Mobile-Tech, LLC"
    image={{
      src: '~/assets/images/Mobile-Tech-LLC.png',
      alt: 'Mobile-Tech LLC Logo',
      class: 'w-64 h-auto mx-auto object-contain',
      width: undefined,
      height: undefined,
    }}
  >
    <Fragment slot="title">
      Serving Tucson Since <br />
      <span class="text-primary dark:text-secondary">2005</span>
    </Fragment>

    <Fragment slot="subtitle">
      Mobile-Tech, LLC has been providing patient, honest technology support to Tucson families and businesses for
      over two decades. We solve all technology problems while teaching you the best practices for security and
      maintenance - because we'd rather empower you than create dependency.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Our Track Record"
    stats={[
      { title: 'Years Serving Tucson', amount: '20+' },
      { title: 'Founded', amount: '2005' },
      { title: 'Service Models', amount: '2' },
      { title: 'Families and Businesses Served', amount: '100+' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our Two-Tier Service Model"
    subtitle="Mobile-Tech, LLC provides comprehensive technology support across two distinct service tiers, ensuring we meet the unique needs of residential customers, small businesses, and enterprise clients."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Residential Services',
        description:
          'Patient, friendly tech support for families and individuals. We offer in-person service, drop-off or remote help. We pride ourselves on education and empowerment.',
        icon: 'tabler:home',
      },
      {
        title: 'Commercial Solutions',
        description:
          'Enterprise infrastructure solutions including: servers, large-scale networking, office support, business automation, and services at any scale.',
        icon: 'tabler:building',
      },
      {
        title: 'Technology Consultation',
        description:
          'Unbiased technology purchasing advice and research. We help you choose the right technology for your actual needs and budget.',
        icon: 'tabler:bulb',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Computer Repair & Upgrades',
        description:
          'Speed optimization, virus removal, RAM/SSD upgrades, and system reimaging - all without data loss.',
        icon: 'tabler:device-desktop',
      },
      {
        title: 'Network Infrastructure',
        description: '8,000+ sqft installations, 10G infrastructure, enterprise WiFi, and 24/7/365 uptime solutions.',
        icon: 'tabler:network',
      },
      {
        title: 'Security & Training',
        description:
          'Password management setup, security best practices training, and ongoing education to keep you safe.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Mobile Device Support',
        description: 'iPhone, iPad, Android setup and support, including cross-platform integration.',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'Enterprise Virtualization',
        description:
          'Server deployment, business process automation, and cloud service management for enterprise clients.',
        icon: 'tabler:cloud-computing',
      },
      {
        title: 'Mac Advocacy',
        description:
          'We recommend Macs for simplicity and reliability, helping customers transition from PC to Mac seamlessly.',
        icon: 'tabler:brand-apple',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?ixlib=rb-4.0.3&auto=format&fit=crop&w=1740&q=80',
      alt: 'Technology Support Services',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Core Values"
    subtitle="Since 2005, Mobile-Tech, LLC has built its reputation on three fundamental principles that guide every interaction with our customers."
    items={[
      {
        title: 'Education Over Dependency',
        description:
          "We'd rather lose a recurring customer by teaching them to maintain their own systems than create dependency. Our goal is to empower you with knowledge and best practices.",
      },
      {
        title: 'Simplicity and Repeatability',
        description:
          'We prioritize simple, reliable solutions that work consistently over time. This is why we often recommend Macs - they provide the simplicity our customers value.',
      },
      {
        title: 'Honest, Patient Service',
        description:
          'No judgment, no confusing tech talk. We provide clear explanations and take the time needed to ensure you understand your technology and feel confident using it.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Journey"
    subtitle="From our founding in May 2005 to today, Mobile-Tech, LLC has consistently strived to provide excellent service while solving all technology problems - big and small."
    isReversed={true}
    callToAction={{
      text: 'Contact Us Today',
      href: '/contact',
    }}
    items={[
      {
        title: 'More Than Two Decades of Service',
        description:
          "Since 2005, we've been visiting Tucsonans in their homes and businesses, building lasting relationships through reliable service.",
        icon: 'tabler:calendar-time',
      },
      {
        title: 'Proven Enterprise Reliability',
        description:
          'Our enterprise clients trust us with critical infrastructure, including 15+ years of 24/7/365 uptime on custom-built servers.',
        icon: 'tabler:server',
      },
      {
        title: 'Data Recovery Excellence',
        description:
          'We rebuild computers and recover systems without data loss, combining technical expertise with the patience to do things right.',
        icon: 'tabler:device-floppy',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Service Area"
    tagline="We Come to You"
    columns={3}
    items={[
      {
        title: 'Tucson, Arizona',
        description:
          'Mobile service throughout the greater Tucson area - we bring our expertise directly to your location.',
      },
      {
        title: 'Mobile-First Service',
        description:
          'No need to transport your equipment. We come equipped with tools and expertise to solve problems on-site.',
      },
      {
        title: 'Remote support or drop-off',
        description:
          'We also offer remote support and drop-off services, so you can get back online quickly.',
      }
    ]}
  />

  <!-- Features2 Widget ************** -->

  <!-- <Features2
    title="Get In Touch"
    tagline="Ready to Help"
    columns={2}
    items={[
      {
        title: 'Call Us Today',
        description:
          'Speak directly with our tech support team. Same-day service available for urgent issues. Phone: 520-314-7152',
        icon: 'tabler:phone',
      },
      {
        title: 'Email Support',
        description:
          "Send us details about your technology challenge and we'll respond promptly with next steps. Email: mobiletechllcaz@gmail.com",
        icon: 'tabler:mail',
      },
    ]}
  /> -->

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Contact us',
        href: '/contact',
        icon: 'tabler:calendar',
      },
    ]}
  >
    <Fragment slot="title">
      Schedule your visit today
    </Fragment>

    <Fragment slot="subtitle">
      <strong>We're Ready to Help</strong>
    </Fragment>
  </CallToAction>
</Layout>
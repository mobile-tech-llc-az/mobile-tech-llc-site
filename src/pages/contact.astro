---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact Mobile-Tech, LLC',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact Mobile-Tech, LLC" title="Ready to Schedule Your Visit?" />

  <div class="px-4 py-16 mx-auto max-w-6xl lg:px-8 lg:py-20">
    <div class="max-w-xl mx-auto">
      <div class="text-center pb-12 md:pb-16">
        <h2 class="text-3xl md:text-4xl font-bold leading-tighter tracking-tighter mb-4 font-heading">
          Schedule Your On-Site Visit
        </h2>
        <p class="text-xl text-muted mb-4">
          Book a convenient time for one of our team members to visit you. Same-day service for urgent issues, depending
          on availability.
        </p>
        <p class="text-2xl md:text-3xl font-bold text-primary dark:text-secondary">
          Call us at (520) 314-7152 or Book online
        </p>
      </div>

      <div class="bg-white dark:bg-brand-medium rounded-lg shadow-lg p-8 border border-brand-light/20">
        <div class="text-center mb-8">
          <h3 class="text-2xl font-bold mb-4 text-primary dark:text-secondary">Book Online</h3>
          <p class="text-muted mb-6">
            Choose a time that works for you using our online scheduling system or email us about your issue and
            availability:
          </p>
          <a
            href="https://calendar.app.google/7RcPw78n1ixTajYK6"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block bg-primary hover:bg-primary/90 text-white font-bold py-3 px-8 rounded-lg transition-colors duration-200 mb-4"
          >
            ðŸ“… Schedule Appointment
          </a>
          <br />
          <a
            href="mailto:mobiletechllcaz@gmail.com"
            class="inline-block bg-primary hover:bg-primary/90 text-white font-bold py-3 px-8 rounded-lg transition-colors duration-200"
          >
            ðŸ“§ Email
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Features2 Widget ************** -->

  <Features2
    title="Multiple Ways to Reach Us"
    items={[
      {
        title: 'Phone Support',
        description: '520-314-7152',
        icon: 'tabler:phone',
      },
      {
        title: 'Email Us',
        description: 'mobiletechllcaz@gmail.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Service Area',
        description: 'Mobile service throughout Tucson, Arizona - we come to you!',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>

---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Mobile-Tech LLC â€” Friendly Computer Help for Tucson Residents',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Call for Help',
        href: 'tel:520-314-7152',
        icon: 'tabler:phone',
      },
      {
        variant: 'primary',
        text: 'Book a Visit',
        href: '/contact',
        icon: 'tabler:calendar',
      },
    ]}
    image={{
      src: '~/assets/images/Mobile-Tech-LLC.png',
      alt: 'Mobile-Tech LLC Logo',
      class: 'w-64 h-auto mx-auto object-contain',
      width: undefined,
      height: undefined,
    }}
  >
    <Fragment slot="title">
      Friendly <span class="text-[#816bb1]">Computer Help</span><br class="block sm:hidden" />
      <span class="hidden sm:inline">for </span>Tucson <span class="hidden xl:inline">Area </span>Residents
    </Fragment>

    <Fragment slot="subtitle">
      <span class="text-lg">
        <strong>Is your computer running slow? Getting pop-ups? Can't figure out your phone?</strong>
      </span><br /><br />
      <span class="text-base">
        We help families and individuals in Tucson with all their technology problems. No judgment, no confusing tech
        talk - just friendly, patient help.
      </span>
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="services"
    title="We Help With Your Everyday Tech Problems"
    subtitle="These are the most common issues we solve for our customers every day."
    items={[
      {
        title: 'Computer Running Slow or Acting Up',
        description:
          "Virus removal, cleaning up your hard drive, making your computer fast again. We fix computers that freeze, crash, or won't start.",
        icon: 'tabler:device-desktop',
      },
      {
        title: 'Phone & iPad Help',
        description:
          'iPhone, iPad, and Android setup. Help with apps, photos, texting, email, and making your devices easier to use.',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'Internet & WiFi Problems',
        description:
          "Can't get online? WiFi not working? We fix internet problems and help you get better, faster internet service.",
        icon: 'tabler:wifi',
      },
      {
        title: 'Email & Password Issues',
        description:
          "Gmail, Yahoo, Outlook problems. Forgotten passwords, can't log in, or need help organizing your email.",
        icon: 'tabler:mail',
      },
      {
        title: 'TV & Streaming Setup',
        description:
          'Setting up Netflix, mounting TVs, programming remote controls, and switching from cable to streaming services.',
        icon: 'tabler:device-tv',
      },
      {
        title: 'Backing Up Your Photos & Files',
        description:
          "Don't lose your precious photos! We help save your files to the cloud and show you how to keep them safe.",
        icon: 'tabler:photo',
      },
      {
        title: 'Help Choosing New Technology',
        description:
          "Need a new computer, TV, or streaming device? We research the best options and help you choose what's right for your needs and budget.",
        icon: 'tabler:shopping-cart',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    title="Why Choose Mobile-Tech LLC?"
    items={[
      {
        title: 'We Come to You',
        description: 'No need to unplug your computer or drive anywhere. We come to your home at your convenience.',
      },
      {
        title: 'Patient & Understanding',
        description:
          'We explain everything in plain English and never make you feel rushed or embarrassed about asking questions.',
      },
      {
        title: 'Honest Pricing',
        description: 'Clear, upfront pricing with no hidden fees. We only recommend what you actually need.',
      },
      {
        title: 'Local Tucson Business',
        description: "We live and work in Tucson. We're your neighbors, and we care about serving our community well.",
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1576091160550-2173dba999ef?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Person getting computer help',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Serving Tucson with Care</h3>
      We understand that technology can be frustrating. That's why we focus on making it simple and stress-free for you.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-brand-light/10 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    title="Common Problems We Solve"
    items={[
      {
        title: '"My computer is full and running slow"',
        description: 'We clean up your computer, move photos to the cloud, and make it run like new again.',
      },
      {
        title: '"I keep getting scary pop-up messages"',
        description: 'We remove viruses and malware, then show you how to avoid them in the future.',
      },
      {
        title: '"I forgot all my passwords"',
        description:
          'We help you reset passwords and set up a simple password manager so you never get locked out again.',
      },
      {
        title: '"My WiFi doesn\'t reach my bedroom"',
        description: 'We improve your WiFi coverage throughout your home so you can use the internet anywhere.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Computer help for everyone',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">You're Not Alone</h3>
      These problems happen to everyone! We've helped thousands of Tucson residents with these exact same issues.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-brand-light/10 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Call Now: 520-314-7152',
        href: 'tel:520-314-7152',
        icon: 'tabler:phone',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to Get Your<br class="block sm:hidden" /><span class="sm:whitespace-nowrap"> Technology Working?</span>
    </Fragment>

    <Fragment slot="subtitle">
      Call us at <strong>520-314-7152</strong> or email <strong>mobiletechllcaz@gmail.com</strong><br
        class="hidden md:inline"
      />
      <strong>Same-day service available!</strong>
    </Fragment>
  </CallToAction>
</Layout>
